<!-- Gazebo ROS joint state plugin -->
<plugin
    filename="libgz_ros2_control-system.so"
    name="gz_ros2_control::GazeboSimROS2ControlPlugin">
    <parameters>/home/filip/ros2_ws/install/snake_sim/share/snake_sim/config/controllers.yaml</parameters>
    <ros>
        <namespace>/</namespace>
    </ros>
</plugin>

<!-- ros2_control hardware interface -->
